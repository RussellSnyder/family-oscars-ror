  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name %>
  <%= f.input :description %>
  <% if @awards_ceremony.image.attached? %>
    <%# TODO have this render when uploaded %>
    current photo
    <%= image_tag(@awards_ceremony.image, :class => "img-fluid", :style => "max-width: 300px") %>
